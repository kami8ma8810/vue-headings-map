{
  "name": "vue-headings-map",
  "displayName": "VueHeadingsMap",
  "description": "Visualize heading structure in Vue projects",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:vueHeadingsMapExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vueHeadingsMap.refreshHeadings",
        "title": "Refresh Headings"
      },
      {
        "command": "vueHeadingsMap.setBaseDirectory",
        "title": "Set Base Directory"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vueHeadingsMapExplorer",
          "title": "VueHeadingsMap Explorer",
          "icon": "resources/headings-icon.svg"
        }
      ]
    },
    "views": {
      "vueHeadingsMapExplorer": [
        {
          "id": "vueHeadingsMapExplorer",
          "name": "Headings Tree"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vueHeadingsMap.refreshHeadings",
          "when": "view == vueHeadingsMapExplorer",
          "group": "navigation"
        },
        {
          "command": "vueHeadingsMap.setBaseDirectory",
          "when": "view == vueHeadingsMapExplorer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "parse5": "^7.3.0"
  }
}
